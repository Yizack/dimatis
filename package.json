{
  "private": true,
  "name": "dimatis",
  "description": "Dimatis music artist website with Nuxt",
  "type": "module",
  "author": {
    "name": "Yizack Rangel",
    "email": "yizackr@gmail.com",
    "url": "https://yizack.com"
  },
  "homepage": "https://dimatis.music",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Yizack/dimatis.git"
  },
  "bugs": "https://github.com/Yizack/dimatis/issues",
  "scripts": {
    "build": "pnpm color:players && pnpm data && nuxt build",
    "dev": "nuxt dev --port=5173",
    "generate": "nuxt generate",
    "preview": "wrangler d1 migrations apply DB --local && wrangler dev",
    "postinstall": "nuxt prepare",
    "color:players": "jiti scripts/playerStyles",
    "data": "jiti scripts/generatePublicData",
    "db:migrate": "drizzle-kit generate --config=.config/drizzle.ts",
    "lint": "pnpm lint:eslint && pnpm lint:stylelint",
    "lint:fix": "pnpm lint:eslint --fix && pnpm lint:stylelint --fix",
    "lint:eslint": "eslint --config .config/eslint.mjs",
    "lint:stylelint": "stylelint \"**/*.{css,scss,sass}\" --config .config/stylelint.json",
    "test:types": "vue-tsc -b --noEmit"
  },
  "devDependencies": {
    "@glidejs/glide": "^3.7.1",
    "@iconify-json/fa6-brands": "^1.2.6",
    "@iconify-json/tabler": "^1.2.23",
    "@nuxt/eslint": "^1.9.0",
    "@nuxt/icon": "^2.0.0",
    "@nuxthub/core": "^0.9.0",
    "@nuxtjs/color-mode": "^3.5.2",
    "@nuxtjs/sitemap": "^7.4.7",
    "@types/bootstrap": "^5.2.10",
    "@types/glidejs__glide": "^3.6.6",
    "@types/node": "^24.7.1",
    "@vueuse/core": "^13.9.0",
    "bootstrap": "^5.3.8",
    "drizzle-kit": "^0.31.5",
    "drizzle-orm": "^0.44.6",
    "eslint": "^9.37.0",
    "fast-average-color-node": "^3.1.0",
    "nuxt": "^4.1.3",
    "nuxt-musicfyplayer": "^2.1.9",
    "sass": "^1.93.2",
    "stylelint": "^16.25.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "typescript": "^5.9.3",
    "vue-tsc": "^3.1.1",
    "wrangler": "^4.42.2",
    "zod": "^4.1.12"
  },
  "packageManager": "pnpm@10.18.2"
}
